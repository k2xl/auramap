<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/LinearLayout01" android:layout_width="fill_parent" 
android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android" 
android:gravity="center" android:keyPreviewLayout="center" android:padding="12dip"
android:background="#333333" android:layout_gravity="center_vertical|center_horizontal|center">

<TextView android:id="@+id/TextView01" android:padding="12dip" 
android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:textColor="#FFF" android:textSize="24sp" android:gravity="center"
android:textStyle="bold" android:text="Wish to elaborate?" android:layout_gravity="center"></TextView>
<TextView android:id="@+id/TextView02" android:padding="12dip"
android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:text="Type in why you feel the way you do or select from the most popular tags below." android:textColor="#FFF" android:textStyle="italics" android:textSize="15sp"></TextView>

<EditText android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:id="@+id/tag"></EditText>

<TextView android:id="@+id/TextView02" android:padding="12dip"
android:layout_width="wrap_content" android:layout_height="wrap_content" 
android:text="Top local tags:" android:textColor="#FFF" android:textSize="18sp" 
android:textStyle="bold"></TextView>

<CheckBox android:text="School" android:id="@+id/CheckBox01" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
<CheckBox android:text="CheckBox02" android:id="@+id/CheckBox02" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
<CheckBox android:text="CheckBox03" android:id="@+id/CheckBox03" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>

<TableRow android:id="@+id/next" android:layout_width="wrap_content" android:padding="10dip"
    android:layout_height="wrap_content" android:gravity="center_horizontal">
    	<ImageView android:id="@+id/blank2" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:background="@drawable/blank2"></ImageView>
    	<ImageView android:id="@+id/blank2" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:background="@drawable/blank2"></ImageView>
	    <ImageButton android:layout_width="wrap_content"
    	android:layout_height="wrap_content" android:id="@+id/submit" 
        android:gravity="right"
    	android:background="@drawable/next" android:layout_gravity="right"></ImageButton>    	
    </TableRow> 
</TableLayout> 
