<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="afterDescendants" android:gravity="center_horizontal|center" 
    android:background="#333333">

    <TableRow android:id="@+id/question" android:layout_width="wrap_content" android:padding="15dip"
    android:layout_height="wrap_content" android:gravity="center_horizontal">
        <ImageView android:id="@+id/how" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:background="@drawable/howhappy"></ImageView>
        
    </TableRow>
    
    <TableRow android:id="@+id/face" android:layout_width="wrap_content" android:padding="20dip"
    android:layout_height="wrap_content" android:gravity="center_horizontal" android:background="@drawable/blank2" android:minHeight="120sp" android:minWidth="120sp">
        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:id="@+id/FaceButton" android:minHeight="125sp" android:minWidth="125sp" android:background="@drawable/blank2"></ImageButton>
    </TableRow>
        
    <TableRow android:id="@+id/select" android:layout_width="wrap_content" android:padding="5dip"
    android:layout_height="wrap_content" android:gravity="center_horizontal">
        <ImageView
            android:background="@drawable/select"></ImageView>	
    </TableRow>
	
	<TableRow android:id="@+id/faces" android:layout_width="wrap_content" android:padding="15dip"
	android:layout_height="wrap_content" android:gravity="center_horizontal">
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="@drawable/sad" android:id="@+id/HappyButton0"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="@drawable/lesssad" android:id="@+id/HappyButton1"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="@drawable/neutral" android:id="@+id/HappyButton2"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="@drawable/lesshappy" android:id="@+id/HappyButton3"></ImageButton>
		<ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="@drawable/happy" android:id="@+id/HappyButton4"></ImageButton>	
	</TableRow>
	
	<TableRow android:id="@+id/scroll" android:layout_width="wrap_content" android:padding="10dip" 
    android:layout_height="wrap_content" android:gravity="center_horizontal">
        <ImageButton
        android:background="@drawable/scroll"></ImageButton>
    </TableRow>
    
    <TableRow android:id="@+id/next" android:layout_width="wrap_content" android:padding="10dip"
    android:layout_height="wrap_content" android:gravity="center_horizontal">
    	<ImageView android:id="@+id/blank2" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:background="@drawable/blank2"></ImageView>
    	<ImageView android:id="@+id/blank2" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:background="@drawable/blank2"></ImageView>
	    <ImageButton android:layout_width="wrap_content"
    	android:layout_height="wrap_content" android:id="@+id/nextButton" 
        android:gravity="right"
    	android:background="@drawable/next" android:layout_gravity="right"></ImageButton>    	
    </TableRow> 

</LinearLayout>
